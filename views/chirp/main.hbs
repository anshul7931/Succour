<div class="col-sm-10 col-sm-offset-1">
	<div class= 'row'>
		<textarea
		    ng-show="loggedIn"
			ng-model="newWaste"
			ng-keypress="sendWaste($event)"
			class="form-control"
			placeholder="Post Waste... then press Enter">
		</textarea>
	</div>
	<div class = "row">
		<table class="waste-section">
			<tr> <a ng-show="incomingWastes" ng-click="setNewWastes()" class="ng-binding"> You have got <span ng-bind="difference"></span> new wastes</a></tr> 
			<tr ng-repeat="waste in wastes">
				<td>{{waste.user}}
					<image ng-src="{{waste.userImage}}" class = "img-responsive">
				</td>

				<td>
					<strong><span ng-bind="waste.date | date : 'dd/MM/yyyy hh:mm:ss"></span></strong><br>
					<p> <span ng-bind="waste.content"></span></p>
				</td>
			</tr>
		</table>
	</div>
</div>